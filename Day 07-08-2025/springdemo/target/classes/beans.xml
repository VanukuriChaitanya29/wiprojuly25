<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"  
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
       xsi:schemaLocation="  
           http://www.springframework.org/schema/beans  
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Department bean with default constructor (default values in code or via properties) -->
    <bean id="department" class="com.wipro.springdemo.Department">
        <!-- Optional: properties can still be set if you want override -->
    </bean>

    <!-- College bean uses constructor injection -->
    <bean id="college" class="com.wipro.springdemo.College">
        <constructor-arg value="ABC College" />
        <constructor-arg ref="department" />
    </bean>

</beans>